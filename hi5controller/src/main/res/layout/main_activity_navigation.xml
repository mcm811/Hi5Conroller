<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/nav_header_height"
                android:background="@drawable/navigation_background_gradient"
                android:gravity="bottom"
                android:orientation="vertical"
                android:theme="@style/ThemeOverlay.AppCompat.Dark"
                tools:targetApi="lollipop">

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="40dp"
		android:layout_height="60dp"
		android:layout_alignParentStart="true"
		android:layout_alignWithParentIfMissing="false"
		android:layout_centerVertical="true"
		android:layout_marginStart="10dp"
		android:contentDescription="@string/hi5_weld_management"
		android:paddingTop="@dimen/nav_header_vertical_spacing"
		android:src="@drawable/industrial_robot_black"/>

	<TextView
		android:id="@+id/tvAppName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/tvAppCompany"
		android:layout_toEndOf="@+id/imageView"
		android:paddingTop="@dimen/nav_header_vertical_spacing"
		android:text="@string/app_name"
		android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

	<TextView
		android:id="@+id/tvAppCompany"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/imageView"
		android:layout_alignStart="@+id/tvAppName"
		android:text="@string/changyoung_robot"/>

	<View
		android:id="@+id/view_dummy"
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:layout_alignParentBottom="true"
		android:background="@color/toolbarOutlineColor"/>

</RelativeLayout>
