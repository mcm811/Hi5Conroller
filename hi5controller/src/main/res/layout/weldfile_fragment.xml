<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.changyoung.hi5controller.weldfile.WeldFileFragment">

	<LinearLayout
		android:id="@+id/work_path_layout"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="10dp"
		android:fitsSystemWindows="true"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:orientation="vertical">

		<android.support.design.widget.TextInputLayout
			android:id="@+id/textInputLayout1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginEnd="4dp"
			android:layout_marginStart="4dp">

			<com.changyoung.hi5controller.common.EditText
				android:id="@+id/etWorkPath"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:hint="@string/WorkPath"
				android:maxLines="1"
				android:textAppearance="?android:attr/textAppearanceSmall"/>
		</android.support.design.widget.TextInputLayout>

		<View
			android:layout_width="match_parent"
			android:layout_height="0.5dp"
			android:layout_marginTop="1dp"
			android:background="@color/toolbarOutlineColor"/>

		<fragment
			android:id="@+id/weldfile_fragment"
			class="com.changyoung.hi5controller.weldfile.WeldFileListFragment"
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1"
			tools:layout="@layout/weldfile_list_fragment"/>

		<!--
				<android.support.v7.widget.Toolbar
					android:id="@+id/work_path_toolbar"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="bottom|start"
					android:background="@color/blue_500"
					android:minHeight="?attr/actionBarSize"
					android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
					app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
					app:titleTextAppearance="@style/Style.ToolBarTitle"/>
		-->
	</LinearLayout>

