<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	android:id="@+id/cardlist_item"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="2dp"
	android:background="?android:attr/selectableItemBackground"
	android:clickable="true"
	android:elevation="6dp"
	android:focusable="true"
	android:orientation="vertical"
	card_view:cardCornerRadius="4dp"
	card_view:cardElevation="@dimen/cardview_default_elevation">

	<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	                                             android:layout_width="match_parent"
	                                             android:layout_height="match_parent"
	                                             android:orientation="vertical"
		>

		<TextView
			android:id="@+id/tvFileName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="8dp"
			android:layout_marginTop="8dp"
			android:text="@string/file_name"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textSize="18sp"
			android:textStyle="bold"
			card_view:layout_constraintEnd_toStartOf="@+id/tvJobCount"
			card_view:layout_constraintHorizontal_bias="0.0"
			card_view:layout_constraintStart_toStartOf="parent"
			card_view:layout_constraintTop_toTopOf="parent"/>

		<TextView
			android:id="@+id/tvJobCount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:layout_marginTop="8dp"
			android:text="@string/job_count"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textSize="16sp"
			card_view:layout_constraintEnd_toEndOf="parent"
			card_view:layout_constraintRight_toRightOf="parent"
			card_view:layout_constraintTop_toTopOf="parent"
			tools:ignore="SmallSp"/>

		<TextView
			android:id="@+id/tvCN"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="0dp"
			android:layout_marginStart="4dp"
			android:layout_marginTop="8dp"
			android:text="@string/cn_strings"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="@color/cnTextColor"
			android:textSize="16sp"
			card_view:layout_constraintEnd_toEndOf="@+id/tvJobCount"
			card_view:layout_constraintHorizontal_bias="0.0"
			card_view:layout_constraintLeft_toLeftOf="@+id/tvFileName"
			card_view:layout_constraintStart_toStartOf="@+id/tvFileName"
			card_view:layout_constraintTop_toBottomOf="@+id/tvFileName"
			tools:ignore="SmallSp"/>

		<TextView
			android:id="@+id/tvMove"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="0dp"
			android:text="@string/move"
			android:textColor="@color/moveTextColor"
			android:textSize="16sp"
			card_view:layout_constraintEnd_toEndOf="@+id/tvJobCount"
			card_view:layout_constraintHorizontal_bias="0.0"
			card_view:layout_constraintStart_toStartOf="@+id/tvCN"
			card_view:layout_constraintTop_toBottomOf="@+id/tvCN"
			tools:ignore="SmallSp"/>

		<TextView
			android:id="@+id/tvPreview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginEnd="8dp"
			android:layout_marginStart="0dp"
			android:text="@string/preview"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textSize="16sp"
			card_view:layout_constraintEnd_toEndOf="@+id/tvJobCount"
			card_view:layout_constraintHorizontal_bias="0.0"
			card_view:layout_constraintStart_toStartOf="@+id/tvMove"
			card_view:layout_constraintTop_toBottomOf="@+id/tvMove"
			tools:ignore="SmallSp"/>

		<TextView
			android:id="@+id/tvFileTime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:layout_marginEnd="8dp"
			android:layout_marginTop="8dp"
			android:text="@string/file_time"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textSize="12sp"
			card_view:layout_constraintBottom_toBottomOf="parent"
			card_view:layout_constraintEnd_toStartOf="@+id/tvFileSize"
			card_view:layout_constraintHorizontal_bias="0.0"
			card_view:layout_constraintStart_toStartOf="@+id/tvFileName"
			card_view:layout_constraintTop_toBottomOf="@+id/tvPreview"
			card_view:layout_constraintVertical_bias="0.0"
			tools:ignore="SmallSp"/>

		<TextView
			android:id="@+id/tvFileSize"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="8dp"
			android:layout_marginEnd="0dp"
			android:text="@string/file_size"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textSize="12sp"
			card_view:layout_constraintBottom_toBottomOf="parent"
			card_view:layout_constraintEnd_toEndOf="@+id/tvJobCount"
			tools:ignore="SmallSp"/>

	</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
