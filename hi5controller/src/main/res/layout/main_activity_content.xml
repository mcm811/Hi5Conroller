<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="6dp"
                android:isScrollContainer="true"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                tools:context=".MainActivity"
                tools:showIn="@layout/main_activity_appbar"
                tools:targetApi="lollipop">

	<android.support.v4.view.ViewPager
		android:id="@+id/view_pager"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/view_dummy"
		android:elevation="6dp"
		android:isScrollContainer="true"
		tools:targetApi="lollipop"/>

	<View
		android:id="@+id/view_dummy"
		android:layout_width="match_parent"
		android:layout_height="0.5dp"
		android:layout_above="@+id/tab_layout"
		android:background="@color/toolbarOutlineColor"/>

	<android.support.design.widget.TabLayout
		android:id="@+id/tab_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:elevation="6dp"
		android:fadingEdge="horizontal|vertical"
		android:minHeight="?attr/actionBarSize"
		android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
		app:tabIndicatorColor="@color/tabLayoutColor"
		app:tabPaddingEnd="45dp"
		app:tabPaddingStart="45dp"
		app:tabSelectedTextColor="@color/tabLayoutColor"
		tools:targetApi="lollipop"/>

</RelativeLayout>
