<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:padding="5dp"
             tools:context="com.changyoung.hi5controller.WeldCountFragment">

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="top"
		android:contentDescription="Changyoung robot"
		android:scaleType="fitStart"
		android:src="@drawable/banner_changyoung"
		android:visibility="gone"/>

	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:text="작업 경로를 설정 하십시오"
		android:textSize="18dp"
		android:textStyle="bold"
		android:visibility="gone"/>

	<android.support.v4.widget.SwipeRefreshLayout
		android:id="@+id/srl"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<ListView
			android:id="@+id/listView_weld_count"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:choiceMode="singleChoice"
			android:divider="#00000000"
			android:dividerHeight="6dp"
			android:minHeight="25dp"
			android:minWidth="25dp"
			android:paddingEnd="2dp"
			android:paddingStart="2dp"/>

	</android.support.v4.widget.SwipeRefreshLayout>

</FrameLayout>
