<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/linearLayout1"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_weight="1"
	android:fitsSystemWindows="true"
	android:focusable="true"
	android:focusableInTouchMode="true"
	android:orientation="vertical">

	<TextView
		android:id="@+id/statusText"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="20dp"
		android:layout_marginStart="20dp"
		android:text="@string/title_selected_item"
		android:textColor="@color/blue_500"
		android:textStyle="bold"
		android:layout_marginTop="10dp"
		android:layout_marginBottom="10dp"/>

	<android.support.design.widget.TextInputLayout
		android:id="@+id/textInputLayout1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="20dp"
		android:layout_marginStart="20dp">

		<android.support.v7.widget.AppCompatEditText
			android:id="@+id/etOutputData"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:focusable="false"
			android:focusableInTouchMode="false"
			android:gravity="center"
			android:hint="@string/Editor_OutputData"
			android:inputType="none"
			android:selectAllOnFocus="true"
			android:textStyle="bold"
			android:visibility="visible"
			android:background="@android:color/transparent"
			android:textColor="@color/blue_500"/>
	</android.support.design.widget.TextInputLayout>

	<SeekBar
		android:id="@+id/sampleSeekBar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"/>

	<TableLayout
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:layout_marginEnd="20dp"
		android:layout_marginStart="20dp"
		android:layout_weight="1"
		android:stretchColumns="*">

		<TableRow
			>

			<android.support.design.widget.TextInputLayout
				android:id="@+id/textInputLayout2"
				android:layout_width="10sp"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp">

				<android.support.v7.widget.AppCompatEditText
					android:id="@+id/etOutputType"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="start"
					android:hint="@string/Editor_OutputType"
					android:inputType="number"
					android:selectAllOnFocus="true"
					android:textSize="14sp"/>
			</android.support.design.widget.TextInputLayout>

			<android.support.design.widget.TextInputLayout
				android:id="@+id/textInputLayout3"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp">

				<android.support.v7.widget.AppCompatEditText
					android:id="@+id/etSqueezeForce"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="start"
					android:hint="@string/Editor_SqueezeForce"
					android:inputType="number"
					android:selectAllOnFocus="true"
					android:textColor="@color/pink_A200"
					android:textStyle="bold"
					android:textSize="14sp"/>
			</android.support.design.widget.TextInputLayout>
		</TableRow>

		<TableRow
			>

			<android.support.design.widget.TextInputLayout
				android:id="@+id/textInputLayout4"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp">

				<android.support.v7.widget.AppCompatEditText
					android:id="@+id/etMoveTipClearance"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="start"
					android:hint="@string/Editor_MoveTipClearance"
					android:inputType="numberDecimal"
					android:selectAllOnFocus="true"
					android:textSize="14sp"/>
			</android.support.design.widget.TextInputLayout>

			<android.support.design.widget.TextInputLayout
				android:id="@+id/textInputLayout5"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp">

				<android.support.v7.widget.AppCompatEditText
					android:id="@+id/etFixedTipClearance"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="start"
					android:hint="@string/Editor_FixedTipClearance"
					android:inputType="numberDecimal"
					android:selectAllOnFocus="true"
					android:textSize="14sp"/>
			</android.support.design.widget.TextInputLayout>
		</TableRow>

		<TableRow
			>

			<android.support.design.widget.TextInputLayout
				android:id="@+id/textInputLayout6"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginEnd="10dp">

				<android.support.v7.widget.AppCompatEditText
					android:id="@+id/etPanelThickness"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="start"
					android:hint="@string/Editor_PanelThickness"
					android:inputType="numberDecimal"
					android:selectAllOnFocus="true"
					android:textSize="14sp"/>
			</android.support.design.widget.TextInputLayout>

			<android.support.design.widget.TextInputLayout
				android:id="@+id/textInputLayout7"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_marginStart="10dp">

				<android.support.v7.widget.AppCompatEditText
					android:id="@+id/etCommandOffset"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:gravity="start"
					android:hint="@string/Editor_CommandOffset"
					android:inputType="numberDecimal"
					android:selectAllOnFocus="true"
					android:textSize="14sp"/>
			</android.support.design.widget.TextInputLayout>
		</TableRow>
	</TableLayout>

	<SeekBar
		android:id="@+id/sbBegin"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"/>

	<SeekBar
		android:id="@+id/sbEnd"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="8dp"
		android:rotation="180"/>

</LinearLayout>