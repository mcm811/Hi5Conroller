<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
	android:id="@+id/cardlist_item"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_margin="2dp"
	android:background="?android:attr/selectableItemBackground"
	android:clickable="true"
	android:focusable="true"
	android:orientation="vertical"
	card_view:cardCornerRadius="2dp"
	card_view:cardElevation="@dimen/cardview_default_elevation">

	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	                android:layout_width="match_parent"
	                android:layout_height="match_parent"
	                android:orientation="vertical"
	                android:paddingBottom="5dp"
	                android:paddingEnd="10dp"
	                android:paddingStart="10dp"
	                android:paddingTop="5dp">

		<TextView
			android:id="@+id/tvFileName"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:text="@string/file_name"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/tvPreview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_below="@+id/tvMove"
			android:text="@string/preview"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textSize="10sp"
			tools:ignore="SmallSp"/>

		<TextView
			android:id="@+id/tvCount"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_below="@+id/tvFileName"
			android:text="@string/job_count"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textSize="10sp"
			tools:ignore="SmallSp"/>

		<TextView
			android:id="@+id/tvSize"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_alignTop="@+id/tvTime"
			android:text="@string/file_size"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textSize="8sp"
			tools:ignore="SmallSp"/>

		<TextView
			android:id="@+id/tvTime"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignStart="@+id/tvPreview"
			android:layout_below="@+id/tvPreview"
			android:text="@string/file_time"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textSize="8sp"
			tools:ignore="SmallSp"/>

		<TextView
			android:id="@+id/tvCN"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignStart="@+id/tvCount"
			android:layout_below="@+id/tvCount"
			android:text="@string/cn_strings"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="@color/pink_A200"
			android:textSize="10sp"
			tools:ignore="SmallSp"/>

		<TextView
			android:id="@+id/tvMove"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_below="@+id/tvCN"
			android:text="@string/move"
			android:textColor="@color/blue_A200"
			android:textSize="10sp"
			tools:ignore="SmallSp"/>
	</RelativeLayout>
</android.support.v7.widget.CardView>
