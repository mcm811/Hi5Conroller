<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:layout_gravity="center"
                                             android:background="?android:attr/selectableItemBackground"
                                             android:clickable="true"
                                             android:focusable="true"
                                             android:minHeight="25sp"
                                             android:minWidth="25sp"
	>

	<TextView
		android:id="@+id/tvOutputData"
		android:layout_width="30dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="8dp"
		android:gravity="right|center_horizontal|end"
		android:hint="@string/OutputData"
		android:text="@string/OutputData"
		android:textSize="15sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintVertical_bias="0.5"/>

	<com.changyoung.hi5controller.common.EditText
		android:id="@+id/tvSqueezeForce"
		android:layout_width="60dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="48dp"
		android:background="@android:color/transparent"
		android:gravity="right|center_horizontal|end"
		android:hint="@string/SqueezeForce"
		android:imeOptions="actionNext"
		android:inputType="number"
		android:longClickable="false"
		android:selectAllOnFocus="true"
		android:text="@string/SqueezeForce"
		android:textColor="@color/colorAccent"
		android:textSize="25sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@+id/tvOutputData"
		app:layout_constraintTop_toTopOf="parent"/>

	<TextView
		android:id="@+id/tvOutputType"
		android:layout_width="30dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:layout_marginStart="0dp"
		android:gravity="right|center_horizontal|end"
		android:hint="@string/OutputType"
		android:text="@string/OutputType"
		android:textSize="15sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/tvMoveTipClearance"
		app:layout_constraintHorizontal_bias="1.0"
		app:layout_constraintStart_toEndOf="@+id/tvSqueezeForce"
		app:layout_constraintTop_toTopOf="parent"/>

	<TextView
		android:id="@+id/tvMoveTipClearance"
		android:layout_width="60dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="8dp"
		android:gravity="right|center_horizontal|end"
		android:hint="@string/MoveTipClearance"
		android:text="@string/MoveTipClearance"
		android:textSize="10sp"
		app:layout_constraintEnd_toStartOf="@+id/tvPanelThickness"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="SmallSp"/>

	<TextView
		android:id="@+id/tvFixedTipClearance"
		android:layout_width="60dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="0dp"
		android:gravity="right|center_horizontal|end"
		android:hint="@string/FixedTipClearance"
		android:text="@string/FixedTipClearance"
		android:textSize="10sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="@+id/tvMoveTipClearance"
		app:layout_constraintStart_toStartOf="@+id/tvMoveTipClearance"
		app:layout_constraintTop_toBottomOf="@+id/tvMoveTipClearance"
		tools:ignore="SmallSp"/>

	<TextView
		android:id="@+id/tvPanelThickness"
		android:layout_width="60dp"
		android:layout_height="wrap_content"
		android:layout_marginEnd="16dp"
		android:gravity="right|center_horizontal|end"
		android:hint="@string/PanelThickness"
		android:text="@string/PanelThickness"
		android:textSize="10sp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		tools:ignore="SmallSp"/>

	<TextView
		android:id="@+id/tvCommandOffset"
		android:layout_width="60dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="0dp"
		android:gravity="right|center_horizontal|end"
		android:hint="@string/CommandOffset"
		android:text="@string/CommandOffset"
		android:textSize="10sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="@+id/tvPanelThickness"
		app:layout_constraintStart_toStartOf="@+id/tvPanelThickness"
		app:layout_constraintTop_toBottomOf="@+id/tvPanelThickness"
		tools:ignore="SmallSp"/>

</android.support.constraint.ConstraintLayout>